<h1>Game rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Maxplayers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @game_rooms.each do |game_room| %>
  <tr>
    <td><%= game_room.name %></td>
    <td><%= game_room.maxplayers %></td>
    <td><%= link_to 'Show', game_room %></td>
    <td><%= link_to 'Edit', edit_game_room_path(game_room) %></td>
    <td><%= link_to 'Destroy', game_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

